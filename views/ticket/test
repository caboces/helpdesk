
	
	<!-- modal window for time entries -->
	<?php Modal::begin([
		'title' => 'Add Times',
		'id' => 'time-entry-modal',
		'size' => 'modal-lg',
	]); ?>

	<div id="time-entry-modal-content">
		<?= $this->render('@app/views/time-entry/_form', [
			'unknown_ticket_id' => Yii::$app->controller->action->id == 'create' ? true : false,
			'ticket_id' => Yii::$app->request->get('id'),
			'models' => [new TimeEntry()],
		]) ?>
		<?= Html::button('Save', ['class' => 'close-time-entry-modal mt-4 btn btn-primary bg-pacific-cyan border-pacific-cyan']) ?>
	</div>

	<?php Modal::end(); ?>

